{
    "name": "zlab-style-guide",
    "version": "1.2.0",
    "description": "Zeppelin Lab GmbH Style Guide",
    "private": true,
    "main": "dist",
    "repository": {
        "type": "git",
        "url": "https://github.com/Klickrent/zlab-style-guide.git"
    },
    "scripts": {
        "build": "npm install && npm run generate-font && node-sass --include-path scss /app/src/scss/main.scss /dist/css/main.css",
        "watch": "nodemon -e scss -x \"npm run build\"",
        "generate-font": "node svg2font.js src/images/zamicons -of src/fonts -os src/scss -n zamicon -p zamicon- -b zamicon"
    },
    "devDependencies": {
        "argparse": "^1",
        "autoprefixer": "^9.1.3",
        "cross-env": "^5.2.0",
        "cssesc": "^1",
        "mkdirp": "^0.5.1",
        "node-sass": "^4.11.0",
        "nodemon": "^1.18.11",
        "sanitize-filename": "^1.6",
        "svg2ttf": "^4",
        "svgicons2svgfont": "^9",
        "ttf2eot": "^2",
        "ttf2woff": "^2",
        "ttf2woff2": "^2"
    }
}
