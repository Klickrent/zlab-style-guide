{
    "name": "zlab-style-guide",
    "version": "1.3.0",
    "description": "Zeppelin Lab GmbH Style Guide",
    "private": true,
    "main": "dist",
    "repository": {
        "type": "git",
        "url": "https://github.com/Klickrent/zlab-style-guide.git"
    },
    "scripts": {
        "build": "npm install && node-sass --include-path scss /app/scss/main.scss /dist/css/main.css",
        "watch": "nodemon -e scss -x \"npm run build\""
    },
    "devDependencies": {
        "autoprefixer": "^9.1.3",
        "cross-env": "^5.2.0",
        "node-sass": "^4.11.0",
        "nodemon": "^1.18.11"
    }
}
